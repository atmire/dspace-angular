{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app-server",
    "module": "commonjs",
  },
  "angularCompilerOptions": {
    "entryModule": "./src/modules/app/server-app.module#ServerAppModule"
  },
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*.mock.ts",
    "src/**/*.test.ts",
    "src/**/*.stub.ts",
    "src/**/testing/*",
    "src/**/mocks/*",
    "node_modules/klaro/*"
  ],
}
